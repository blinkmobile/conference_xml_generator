<%= semantic_form_for [:admin, @conference, @group] do |f| %>
    <%= f.inputs do %>
      <%= f.input :title %>
      <%= f.input :subtitle %>
      <%= f.input :day, :collection => Day.where("conference_id = ?", params[:conference_id]) %>
      <%= f.input :starttime %>
      <%= f.input :endtime %>
      <%= f.input :visible %>
      <%= f.input :imageurl %>
      <%= f.input :subgroups, :collection => Group.where("conference_id = ?", params[:conference_id]) %>
      <%= f.input :sessions, :collection => Session.where("conference_id = ?", params[:conference_id]) %>
      <%= f.input :speakers, :collection => Speaker.where("conference_id = ?", params[:conference_id]) %>
      <%= f.buttons %>
    <% end %>
<% end %>